<html>
  <head>
    <meta charset="utf-8">
    <title>Orders</title>
  
    <%- include('head.ejs')%>
  </head>

  <body> <!--row col row col-->
    <%- include('header.ejs')%>

    <div class="container-fluid">
      <div class="row justify-content-center align-items-center">
        <div class="col-md-10 col-lg-10 col-sm-12">
          <!--<div class="row article-list">-->
            <% if (orders.length == 0) { %>
              <div class="row justify-content-center align-items-center main-annonce">
                <div class="col-md-12 col-lg-12 col-sm-12">
                  <h4>Vous n'avez passez aucune commande chez nous pour le moment</h4>
                </div>
              </div>
            <% } else { %>
            <% orders.forEach(order => { %>
                <div class="row article-list">
                  <div class="col-md-10 col-lg-10 col-sm-12 content">
                    <% order.articles.forEach(article => { %>
                      <h6><%= article %></h6>
                    <% }) %>
                  </div>
                  <div class="col-md-2 col-lg-2 col-sm-12"><h4><%= order.price %>â‚¬</h4></div>
                </div>
            <% }) %>
            <% } %>
          <!--</div>-->
        </div>
    </div>

    <%- include('footer.ejs')%>

  </body>
</html>
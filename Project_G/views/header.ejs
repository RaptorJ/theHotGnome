<header class="container-fluid">
    <div class="row align-items-center">
      <div class="col-md-3 col-ld-3 col-ms-12 col-xs-12">
        <div class="row align-items-center">
          <div class="col-md-4 col-ld-4 col-ms-4 col-xs-4">
            <img id="logo" src="Images/Soul_Logo.png" alt="Logo" width="80" height="80">
          </div>
          <div class="col-md-8 col-ld-8 col-ms-8 col-xs-8">
            <a href="http://localhost:3000/"><h1>GNOME</h1></a>
            <small>L'ame de la Pop Culture</small>
          </div>
        </div>
      </div>
      
      <div class="col-md-5 col-ld-5 col-ms-12 col-xs-12">
        <form class="input-group md-form form-sm form-2 pl-0" action="http://localhost:3000/articles/getArticleList" method="POST">
          <input class="form-control my-0 py-1 amber-border" name="title" id="tags" type="text" placeholder="Je recherche..." aria-label="Search">
          <input type="submit">
        </form>
      </div>
      <div class="col-md-4 col-ld-4 col-ms-12 col-xs-12">
        <div class="row align-items-center">
          <div class="col-md-4 col-ld-4 col-ms-12 col-xs-12">
            <a href="http://localhost:3000/articles/whishlist">
              <img id="Wishlist" src="Images/Wishlist.png" alt="Wishlist" width="50" height="50">
              Wishlist
            </a>
          </div>
          <div class="col-md-4 col-ld-4 col-ms-12 col-xs-12">
            <% if (!session || !session.role || session.role!='admin') { %>
            <a href="http://localhost:3000/articles/cart">
              <img id="Cart" src="Images/Cart.png" alt="Cart" width="50" height="50">
              Cart
            </a>
            <% } else {%>
              <a href="http://localhost:3000/articles/new">
                  <img id="Cart" src="Images/Cart.png" alt="Cart" width="50" height="50">
                  +Product
                </a>
            <% } %>
          </div>
          <div class="col-md-4 col-ld-4 col-ms-12 col-xs-12">
            <% if (!session || !session.username) { %>
            <a href="http://localhost:3000/users/login">
              <img id="Login" src="Images/User.png" alt="Login" width="50" height="50">
              Login
            </a>
            <% } else {%>
              <% const html = `<a href="http://localhost:3000/users/userInfo">` %>
              <%- html %>
                <img id="Login" src="Images/User.png" alt="Logout" width="50" height="50">
                <%= session.username %>
              </a>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
        <nav class="col-md-10 col-lg-10 col-sm-12 hidden-xs" id="menu">
            <ul class="row"> 
                <li class="col-md-2 col-lg-2 col-sm-12 hidden-xs"><a href="http://localhost:3000/articles/productsType?type=Papeterie">Livres, Comics, Mangas</a></li>
                <li class="col-md-2 col-lg-2 col-sm-12 hidden-xs"><a href="http://localhost:3000/articles/productsType?type=Jeux_video_Console">Jeux vidéo, Consoles</a></li>
                <li class="col-md-2 col-lg-2 col-sm-12 hidden-xs"><a href="http://localhost:3000/articles/productsType?type=Informatique">Informatique</a></li>
                <li class="col-md-2 col-lg-2 col-sm-12 hidden-xs"><a href="http://localhost:3000/articles/productsType?type=Produit_tiers">Produits dérivés</a></li>
                <li class="col-md-2 col-lg-2 col-sm-12 hidden-xs"><a href="#">Evènements</a></li>
                <li class="col-md-2 col-lg-2 col-sm-12 hidden-xs"><a href="#">Actu Pop Culture</a></li>
            </ul>
        </nav>
    </div>
  </header>
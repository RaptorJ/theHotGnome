<html>
  <head>
    <meta charset="utf-8">
    <title>Home</title>
  
    <%- include('head.ejs')%>
  </head>

  <body>
    <%- include('header.ejs')%>

    <div class="container-fluid">
      <div class="row justify-content-center align-items-center">
        <div class="col-md-10 col-lg-10 col-sm-12">
            <% if (articles.length == 0) { %>
              <div class="row justify-content-center align-items-center main-annonce">
                <div class="col-md-12 col-lg-12 col-sm-12">
                  <h4>Aucun article ne correspond à votre recherche</h4>
                </div>
              </div>
            <% } else { %>
            <% articles.forEach(article => { %>
                <a class="row article-list" href="http://localhost:3000/articles/getArticle?id=<%= article._id %>">
                  <div class="col-md-2 col-lg- col-sm-12">
                    <% if (article.image) { %>
                      <img src="<%= article.image %>">
                    <% } else { %>
                      <img src="https://d1eh9yux7w8iql.cloudfront.net/product_images/1552486432.53.jpg?fbclid=IwAR1nSRaFRARSm5HtIFyge18TBXMKq5ViyWoq49ObnIck80Gctm9Nmeo0wtg">
                    <% } %>
                    </div>
                  <div class="col-md-8 col-lg-8 col-sm-12 content">
                    <h4><%= article.title %></h4>
                    <h6><%= article.seller %></h6>
                    <p><%= article.content %></p>
                  </div>
                  <div class="col-md-2 col-lg-2 col-sm-12"><h4><%= article.price %>€</h4></div>
                </a>
            <% }) %>
            <% } %>
        </div>
    </div>

    <%- include('footer.ejs')%>

  </body>
</html>
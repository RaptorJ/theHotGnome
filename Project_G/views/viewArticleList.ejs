<html>
  <head>
    <meta charset="utf-8">
    <title>Home</title>
  
    <%- include('head.ejs')%>
  </head>

  <body> <!--row col row col-->
    <%- include('header.ejs')%>

    <div class="container-fluid">
      <div class="row justify-content-center align-items-center main-annonce">
        <div class="col-md-10 col-lg-10 col-sm-12">
            <% articles.forEach(article => { %>
              <div class="row justify-content-center align-items-center article-list">
                <a href="http://localhost:3000/articles/getArticle?id=<%= article._id %>">
                  <div class="col-md-3 col-lg-3 col-sm-12"></div>
                  <div class="col-md-9 col-lg-9 col-sm-12">
                    <h1><%= article.title %></h1>
                  </div>
                </a>
             </div>
            <% }) %>
        </div>
    </div>

    <%- include('footer.ejs')%>

  </body>
</html>